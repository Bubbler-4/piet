{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "off"
    ],
    "no-bitwise": "off",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-empty": "off",
    "spaced-comment": "warn",
    "prettier/prettier": "warn",
    "no-param-reassign": "off"
  }
}
